<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--=============== CSS ===============-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/evento.css" />
    

    <title>Evento</title>
  </head>
  <body>
    <%- include("./partials/header");%>
    <!-- Selecione o Mês -->
    <section class="select-mes">
      <div class="item">
        <span>Mês</span>
        <ul class="submenu">
          <!-- Lista dos botões dos meses -->
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/janeiro';">janeiro</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/fevereiro';">fevereiro</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/marco';">março</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/abril';">abril</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/maio';">maio</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/junho';">junho</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button"onclick="window.location.href = '/evento/mes/julho';">julho</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button"onclick="window.location.href = '/evento/mes/agosto';">agosto</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/setembro';">setembro</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/outubro';">outubro</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/novembro';">novembro</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/mes/dezembro';">dezembro</button>
          </li>
        </ul>
        <!-- Lista dos botões dos meses -->
      </div>
      <!-- Dropdown -->

      <div class="item">
        <span>Locais</span>
        <ul class="submenu">
          <!-- Lista dos botões dos meses -->
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/local/Fortaleza';">Fortaleza</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/local/Eusébio';">Eusébio</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/local/Quixadá';">Quixadá</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/local/Sobral';">Sobral</button>
          </li>
        </ul>
        <!-- Lista dos botões dos meses -->
      </div>
      <!-- Dropdown -->

      <div class="item">
        <span>Ações</span>

        <ul class="submenu">
          <!-- Lista dos botões dos meses -->
          <li class="submenu-item">
            <button class="submenu-button"onclick="window.location.href = '/evento/acao/Alimentos e Roupas';">Alimentos e Roupas</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/acao/Eventos Culturais';">Eventos Culturais</button>
          </li>
          <li class="submenu-item">
            <button class="submenu-button" onclick="window.location.href = '/evento/acao/Eventos Esportivos';">Eventos Esportivos</button>
          </li>
        </ul>
        <!-- Lista dos botões dos meses -->
      </div>
      <!-- Dropdown -->
    </section>

    <!-- Carrossel dos Cards -->
    <h5 class="text-center">Escolha seu evento!</h5>
    <div class="container py-5">

      <div class="row row-cols-1 row-cols-md-3 g-4 py-5">
                   <% evento.forEach(p =>{ %>
                    <div class="col">
          <div class="card"  style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%- p.imagemCard %>);">
            <div class="card-body">
              <h5 class="card-title"><%- p.nome %></h5>
              <p class="card-text">
                <%- p.cidade %>
              </p>
            </div>
            <div class="inferior"><a href="/descricao/<%- p._id %>" class="btn btn-primary" >VER EVENTO!</a>></div> 
          </div>
          </div>

                  <% }) %>
                </div>

              
        </div>
        
        
        
      </div>
    </div>
             <%- include("./partials/footer");%>


    <!--=============== Bootstrap JS ===============-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>



</html>
